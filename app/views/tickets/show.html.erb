<header>
  <h1><%= @ticket.name %></h1>
  
  <ul class="actions">
    <li><%= link_to "Edit Ticket", edit_project_ticket_path(@project, @ticket),
    class: "edit" %></li>
    <li><%= link_to "Delete Ticket", project_ticket_path(@project, @ticket),
    method: :delete,
    data: { confirm: "Are you sure you want to delete this ticket?" },
    class: "delete" %></li>
  </ul>

</header>


<header>
  <h2>Tickets</h2>
  <ul class="actions">
    <li><%= link_to "New Ticket", new_project_ticket_path(@project),
  class: "new" %></li>
  </ul>
</header>



<%= content_for :page_title do %>
  <%= "RspecFirstPart - #{@ticket.name}" %>
<% end %>